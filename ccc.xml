<config-template xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">
    <device>
      <name>{$NODE0}</name>
      <config>
        <configuration xmlns="http://xml.juniper.net/xnm/1.1/xnm">
          <interfaces>
            <interface>
              <name>{$INTERFACE0}</name>
              <unit>
                <name>{$ID}</name>
                <encapsulation>vlan-ccc</encapsulation>
                <vlan-id>{$ID}</vlan-id>
              </unit>
            </interface>
          </interfaces>
        <protocols>
        <l2circuit>
        <neighbor>
          <name>{$LOOPBACK0}</name>
          <interface>
            <name>{$INTERFACE0}.{$ID}</name>
            <virtual-circuit-id>{$ID</virtual-circuit-id>
          </interface>
        </neighbor>
        </l2circuit>
        </protocols>
        </configuration>
      </config>
    </device>
    <device>
      <name>{$NODE1}</name>
      <config>
        <configuration xmlns="http://xml.juniper.net/xnm/1.1/xnm">
          <interfaces>
            <interface>
              <name>{$INTERFACE1}</name>
              <unit>
                <name>{$ID}</name>
                <encapsulation>vlan-ccc</encapsulation>
                <vlan-id>{$ID}</vlan-id>
              </unit>
            </interface>
          </interfaces>
        <protocols>
        <l2circuit>
        <neighbor>
          <name>{$LOOPBACK1}</name>
          <interface>
            <name>{$INTERFACE1}.{$ID}</name>
            <virtual-circuit-id>{$ID}</virtual-circuit-id>
          </interface>
        </neighbor>
        </l2circuit>
        </protocols>
        </configuration>
      </config>
    </device>
  </devices>  
</config-template>
